<Screem>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ScrollView:
        BoxLayout:
            id: clients
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height

    BoxLayout:
        size_hint_y: None
        height: 40

        Label:
            text: 'Nome'
        TextInput:
            id: name
        Label:
            text: 'Idade'
        TextInput:
            id: age

    BoxLayout:
        size_hint_y: None
        height: 40

        Button:
            text: 'Cadastrar'
            on_release: root.add_client()
        Button:
            text: 'Editar'
            on_release: root.update_client()
        Button:
            text: 'Remover'
            on_release: root.delete_client()


<ClientButton>:
    font_size: 30
    size_hint_y: None
    height: 50
